.card
	position: relative;
	display inline-block
	width: 100%;
	margin-bottom 40px
	transition: 0.4s transform cubic-bezier(0.215, 0.61, 0.355, 1);

.card-inner
	transform-style preserve-3d
	background-color #333
	color #efefef
	padding 20px
	border 4px solid tan

	a
		color yellow

.header 
	border 1px solid $black
	padding 2px
	margin-bottom 4px

.picture 
	border 1px solid $black
	margin-bottom 4px

.description
	border 1px solid $black
	padding 2px

.image
	height 280px
	background-color cadetblue
	transform translateZ(20px)

.logo
	width 100px
	height 40px
	margin 0 auto
	background-color plum
	transform translateZ(40px)

.title
	color #888
	font-weight bold
	text-align center
	transform translateZ(20px)